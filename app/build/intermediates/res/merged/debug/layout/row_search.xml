<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/contentSearch"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/rowImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:alpha="0.86"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/rowTitle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@color/colorBlackTrans"
            android:textSize="16dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>

        <TextView
            android:id="@+id/rowAuthor"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@color/colorBlackTrans"
            android:textSize="16dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:id="@+id/favB"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/rowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/favB"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="6dp"
                android:text="+3169"/>

            <ImageButton
                android:id="@+id/repostB"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_toRightOf="@id/rowRate"
                android:background="@drawable/ic_insert_link_black_24dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/repostCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/repostB"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="6dp"/>



        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>