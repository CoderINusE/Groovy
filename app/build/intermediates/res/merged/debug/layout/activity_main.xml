<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dsfdsf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paranoidandroid.navigationbar.MainActivity">
    <!-- ToolBar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shadow">
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
    </android.support.v7.widget.Toolbar>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoParalaxOffset="100dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="5dp"
        sothree:umanoShadowHeight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/listview" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:background="@drawable/player_foot_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_margin="9dp"/>
            <TextView
                android:id="@+id/trackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/coverImage"
                android:textColor="#ededed"
                android:layout_marginTop="7dp"
                android:textSize="@dimen/fab_margin"
                android:text="Her gun eyni qoz qoz qoz..."
                />
            <TextView
                android:id="@+id/trackArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ededed"
                android:layout_toRightOf="@id/coverImage"
                android:layout_marginTop="27dp"
                android:text="Mahir"
                />
            <TextView
                android:id="@+id/trackLen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ededed"
                android:layout_toRightOf="@id/coverImage"
                android:layout_marginTop="44dp"
                android:text="4:43"
                />
            <ImageButton
                android:id="@+id/playPauseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_play_circle_outline_black_24dp"
                android:onClick="playPause"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp">
            <TextView
                android:id="@+id/trackCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ededed"
                android:text="0:00"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/trackCurrentTime"
                android:layout_toLeftOf="@+id/trackFullTime" />
            <TextView
                android:id="@+id/trackFullTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ededed"
                android:text="4:43"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp">

            <ImageButton
                android:id="@+id/favB"
                android:layout_width="58px"
                android:layout_height="58px"
                android:background="@drawable/ic_favorite_white_24dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/favCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/favB"
                android:textColor="#ededed"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="6dp"
                android:text="+3169"/>


        </RelativeLayout>


    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>
