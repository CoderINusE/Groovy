<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:padding="20dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profileImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="14dp"
            app:siArrowPosition="right"
            app:siSquare="true"/>

        <LinearLayout
            android:id="@+id/listViewAfterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileImage"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="-4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="13 hour ago"/>

        </LinearLayout>



    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/rowImage"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="180dp"
                android:layout_marginBottom="20px"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/rowTitle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@color/colorBlackTrans"
                android:textSize="16dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textColor="#FFF"
                android:text="Food and Restraunt"/>

            <TextView
                android:id="@+id/rowAuthor"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@color/colorBlackTrans"
                android:textSize="16dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textColor="#FFF"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:id="@+id/favB"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/rowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/favB"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="6dp"
                android:text="+3169"/>

            <ImageButton
                android:id="@+id/repostB"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_toRightOf="@id/rowRate"
                android:layout_marginTop="-2.5dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/repostCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/repostB"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="6dp"/>



        </RelativeLayout>

        <View android:id="@+id/separator"
            android:background="@color/colorBackgroundGrey"
            android:layout_width = "match_parent"
            android:layout_height="10dp"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>
    </LinearLayout>
</android.support.v7.widget.CardView>